<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>MongoDB</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- Form -->
    <div class="container">
      <div class="row">
        <div class="col-md-5 mx-auto">
            <h2 class="my-4">Books</h2>
          <form action="/addBooks" method="post">
            <div class="mb-3">
              <label for="book_name" class="form-label"
                >Book Name : </label
              >
              <input
                type="text"
                class="form-control"
                id="book_name"
                name="book_name"
                placeholder="Enter book name"
              />
            </div>
            <div class="mb-3">
              <label for="book_price" class="form-label"
                >Book Price : </label
              >
              <input
                type="text"
                class="form-control"
                id="book_price"
                name="book_price"
                placeholder="Enter book price"
              />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>

      <!-- Table -->

      <div class="row">
        <div class="col-md-8 mx-auto">
          <h2 class="my-4">Books List</h2>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th>Book Name</th>
                <th>Book Price</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% books.map((val,index)=>{
                let {book_name,book_price,id}=val;
                %>
                <tr>
                  <td><%= index+1%></td>
                  <td><%= book_name%></td>
                  <td><%= book_price%></td>
                  <td>
                    <a href="/deleteBooks/<%= id %>" class="btn btn-danger">Delete</a>
                    <a href="/editBooks/<%= id %>" class="btn btn-warning">Edit</a>  
                  </td>
                </tr>
              <%})%>
              
            </tbody>
          </table>
        </div>
      </div> 


    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"
    ></script>
  </body>
</html>